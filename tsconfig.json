{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    "module": "es2020",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "target": "es2019",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "sh/**/*"],
  "exclude": ["node_modules/**/*"]
}
