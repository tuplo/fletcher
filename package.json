{
  "name": "@tuplo/fletcher",
  "description": "Web scraping HTTP request library",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/fletcher.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "http-client",
    "request",
    "scraping"
  ],
  "files": [
    "dist/index.mjs",
    "dist/index.cjs",
    "dist/index.d.ts",
    "dist/fletcher.d.ts"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@types/async-retry": "1.4.3",
    "@types/cheerio": "0.22.30",
    "@types/node-fetch": "2.5.12",
    "async-retry": "1.3.3",
    "cheerio": "1.0.0-rc.10",
    "deepmerge": "4.2.2",
    "https-proxy-agent": "2.2.4",
    "node-fetch": "2.6.1",
    "puppeteer-core": "11.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@types/node": "16.11.9",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "esbuild": "0.13.15",
    "eslint": "8.3.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "jest": "27.3.1",
    "nock": "13.2.1",
    "nyc": "15.1.0",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "scripts": {
    "build": "bash sh/build.sh",
    "dev": "bash sh/dev.sh",
    "lint:ts": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test:ci:coverage": "bash sh/coverage.sh",
    "test:ci": "jest --ci",
    "test": "jest --watch"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/comma-dangle": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "jest/no-hooks": "off",
      "jest/prefer-expect-assertions": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
